{
	"name": "metric-bot",
	"version": "0.0.1",
	"description": "A simple bot to track Metrics for a Discord Server",
	"main": "lib/index.js",
	"files": [
		"lib/**/*"
	],
	"scripts": {
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src/",
		"build": "tsc",
		"test": "ava src/**/*.spec.ts",
		"posttest": "nyc --reporter=lcov ava src/**/*.spec.ts",
		"format": "prettier -w .",
		"lint": "eslint . && prettier --check .",
		"clean": "rm -r .nyc_output/ coverage/ lib/ *.tsbuildinfo",
		"prepush": "npm run prepare && npm run test && npm run clean && npm run lint"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TinyPandas/MetricBot.git"
	},
	"author": "Chris B",
	"license": "GNU GPL v3",
	"bugs": {
		"url": "https://github.com/TinyPandas/MetricBot/issues"
	},
	"homepage": "https://github.com/TinyPandas/MetricBot#readme",
	"dependencies": {
		"@types/node": "^15.14.8",
		"discord.js": "^13.1.0",
		"typescript": "^4.3.5"
	},
	"devDependencies": {
		"@ava/typescript": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^4.29.2",
		"@typescript-eslint/parser": "^4.29.2",
		"ava": "^3.15.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"nyc": "^15.1.0",
		"prettier": "^2.3.2"
	},
	"ava": {
		"require": [
			"source-map-support/register"
		],
		"typescript": {
			"rewritePaths": {
				"src/": "lib/"
			},
			"compile": false
		}
	}
}
